<%- include('component/header.ejs') %>
<style>
    select{
        width: 100%;
    }
    .yessai{
        display: flex;
        align-items: center;
        flex-direction: column;
    }
</style>
<div class="yessai">
    <form action="/match" method="post">
        <select name="team" id="selectTeams">
            <% stateForm.list.teams.forEach(function(team){ %>
                <option value="<%- team.name %>"><%- team.name %></option>
            <% }); %>
        </select>
        <input type="submit">
    </form>
</div>


